<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/advertisement_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AdvertisementFragment">

    <ImageView
        android:id="@+id/adv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/adsburger"/>

    <ProgressBar
        android:id="@+id/progressBarTimer"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.ProgressBar.Horizontal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/x_image"
        android:background="@drawable/component_1"
        android:layout_marginStart="350dp"
        android:layout_marginTop="43dp"
        android:layout_width="37dp"
        android:layout_height="37dp"/>

    <TextView
        android:id="@+id/need_change_text"
        android:paddingTop="12dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:textAlignment="center"
        android:layout_marginTop="138dp"
        android:layout_marginStart="28dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@drawable/background_advirtisment"
        android:text="Плати за один,\nполучай ДВА!"
        android:layout_width="240dp"
        android:layout_height="100dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="226dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/back_1_1"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="1+1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/ads_order_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="690dp"
        android:layout_marginEnd="41dp"
        android:backgroundTint="#7B1CC6"
        android:text="Перейти к заказу"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp" />

</FrameLayout>