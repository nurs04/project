<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/fragment_container_favorite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FavoriteFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:layout_marginBottom="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fav_food_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <ImageView
                android:id="@+id/fav_heart_photoForFavFragment"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="315dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/heart_photo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fav_restaurant_name"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:layout_marginStart="17dp"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="225dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fav_how_mush_money_int"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:text=""
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/car_text"
                app:drawableRightCompat="@drawable/line_3" />
            <TextView
                android:fontFamily="@font/montserrat"
                android:id="@+id/fav_time_to_ready_string"
                android:layout_marginTop="2dp"
                android:text=""
                android:textSize="18sp"
                android:layout_marginStart="3dp"
                android:layout_width="135dp"
                android:paddingEnd="6dp"
                android:layout_height="wrap_content"
                app:drawableLeftCompat="@drawable/timer"
                app:drawableRightCompat="@drawable/line_3" />
            <TextView
                android:fontFamily="@font/montserrat"
                android:id="@+id/fav_star_rating_string"
                android:layout_marginTop="2dp"
                android:textSize="18sp"
                android:text=""
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:drawableLeftCompat="@drawable/star" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="400dp"
        android:fontFamily="@font/montserrat_light"
        android:textSize="22sp"
        android:textAlignment="center"
        android:text="Пока нет избранных"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>